{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["main"],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "managers": ["dockerfile"],
      "groupName": "dockerfile-dependency",
      "pinDigests": true
    },
    {
      "managers": ["gomod"],
      "pinDigests": true,
      "postUpdateOptions": ["gomodTidy", "gomodMassage"],
      "matchDepTypes": ["indirect"]
    }
  ]
}
